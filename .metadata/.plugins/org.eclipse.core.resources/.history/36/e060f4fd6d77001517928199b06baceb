		}
		
	
		ObjectInputStream ois;
		try {
			ois = new ObjectInputStream(pin);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		
		Object obj = new Object();
		
		try {
			obj=ois.readObject();
		} catch (ClassNotFoundException | IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
